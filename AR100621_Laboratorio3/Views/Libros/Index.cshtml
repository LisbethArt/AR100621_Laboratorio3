@model IEnumerable<AR100621_Laboratorio3.Models.Libro>

@{
    ViewData["Title"] = "Libros";
}

<h1>Inicio</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear nuevo registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoLibro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                ISBN
            </th>
            <th>
                Año de edición
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editorial)
            </th>
            <th>
                Nombre del autor
            </th>
            <th>
                Apellido del autor
            </th>
            <th>
                Nacionalidad del autor
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoLibro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnioEdicion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editorial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OAutores.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OAutores.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OAutores.Nacionalidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>

            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.CodigoLibro">Editar</a> |
                <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.CodigoLibro">Detalles</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CodigoLibro">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
